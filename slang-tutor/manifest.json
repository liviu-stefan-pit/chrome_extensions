{
  "manifest_version": 3,
  "name": "Slang Tutor & Translator",
  "version": "0.0.0",
  "description": "Understand and translate slang, idioms, and colloquialisms in context.",
  "default_locale": "en",
  "icons": {
    "16": "public/icons/icon16.png",
    "32": "public/icons/icon32.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },
  "action": {
    "default_title": "Slang Tutor",
    "default_popup": "src/ui/popup.html"
  },
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "activeTab"
  ]
}
