{
  "manifest_version": 3,
  "name": "Focify â€” YouTube Focus Mode",
  "version": "0.1.6",
  "description": "Focify hides YouTube distractions (Shorts, home feed, related sidebar, comments, end-screen). Modes, toggles, and hotkeys.",
  "minimum_chrome_version": "120",
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_title": "Focify",
    "default_popup": "src/popup/popup.html"
  },
  "options_page": "src/options/options.html",
  "permissions": [
    "declarativeNetRequest",
    "scripting",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://m.youtube.com/*"
  ],
  "background": {
    "service_worker": "src/background/sw.js",
    "type": "module"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "static",
        "enabled": true,
        "path": "rules/dnr_static.json"
      }
    ]
  },
  "commands": {
    "toggle-focus-mode": {
      "suggested_key": { "default": "Alt+Shift+F" },
      "description": "Toggle focus mode (Off/Work/Strict)"
    },
    "pomodoro-toggle": {
      "suggested_key": { "default": "Alt+Shift+P" },
      "description": "Start/Stop Pomodoro (placeholder in v0.1)"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*"
      ],
      "js": ["src/content/main.js"],
      "css": ["assets/yt-focus.css"],
      "run_at": "document_start"
    }
  ]
}
