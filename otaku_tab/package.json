{
  "name": "otaku-tab",
  "version": "1.0.0",
  "description": "A modern, sleek anime-themed new tab dashboard featuring airing schedule, search, and discovery powered by Jikan API.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run copy-manifest",
    "preview": "vite preview",
    "copy-manifest": "node scripts/copy-assets.js",
    "icons": "python icons/generate_icons.py",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "keywords": [
    "chrome-extension",
    "anime",
    "otaku",
    "manga",
    "new-tab",
    "dashboard",
    "jikan-api",
    "myanimelist",
    "airing-schedule"
  ],
  "author": "GitHub Copilot",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/liviu-stefan-pit/chrome_extensions"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide": "^0.454.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.56.0",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "terser": "^5.27.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "chrome": {
    "manifest_version": 3,
    "minimum_chrome_version": "88"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
